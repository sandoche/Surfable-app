{
  "name": "surfable-app",
  "description": "Install any website as an app for a quick access ðŸ“±",
  "version": "1.0.2",
  "scripts": {
    "start": "node ./bin/www",
    "dev": "nodemon ./bin/dev -e js,twig --exec babel-node --presets es2015,env",
    "transpile": "babel --presets es2015,env -d ./build ./src -s",
    "copy-assets": "cp -r ./src/views ./build && cp -r ./src/public ./build",
    "clean": "rm -rf build && mkdir build",
    "build": "npm run clean && npm run transpile && npm run copy-assets"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sandoche/Surfable-app.git"
  },
  "keywords": [
    "installable-app",
    "installable",
    "installable-website",
    "install",
    "website",
    "progressive-web-app",
    "pwa-apps",
    "pwa",
    "surfable-app"
  ],
  "author": "Sandoche ADITTANE & Farbod SARAF",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/sandoche/Surfable-app/issues"
  },
  "homepage": "https://surfable.app/",
  "dependencies": {
    "babel-plugin-transform-regenerator": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "cookie-parser": "~1.4.4",
    "crypto-js": "^4.0.0",
    "debug": "~2.6.9",
    "express": "~4.16.1",
    "fuse.js": "^6.4.1",
    "google-play-scraper": "git+https://github.com/facundoolano/google-play-scraper.git",
    "http-errors": "~1.6.3",
    "morgan": "~1.9.1",
    "twig": "~0.10.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-es2015": "^6.24.1",
    "babelify": "^10.0.0",
    "nodemon": "^2.0.15"
  }
}
